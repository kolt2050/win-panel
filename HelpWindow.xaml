<Window x:Class="WinPanel.HelpWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Справка - WinPanel" Height="500" Width="600"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#1E1E2E">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <TextBlock Text="Справка" Foreground="White" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>
        
        <Border Grid.Row="1" Background="#282838" CornerRadius="8" Padding="10">
            <TextBox x:Name="HelpText" 
                     Background="Transparent" 
                     Foreground="#DDDDDD" 
                     BorderThickness="0"
                     IsReadOnly="True"
                     TextWrapping="Wrap"
                     FontFamily="Consolas, monospace"
                     FontSize="14"
                     VerticalScrollBarVisibility="Auto"/>
        </Border>
        
        <Button Grid.Row="2" Content="Закрыть" Click="Close_Click" 
                Width="100" Height="30" Margin="0,10,0,0"
                HorizontalAlignment="Right"
                Background="#40FFFFFF" Foreground="White" BorderThickness="0">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="4"/>
                </Style>
            </Button.Resources>
        </Button>
    </Grid>
</Window>
